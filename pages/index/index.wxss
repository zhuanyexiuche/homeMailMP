/**index.wxss**/
@import '../common/weui.wxss';
.chatList{
  background-color: #e0e0e0;
  height:auto;
}
.chatItem{
  background-color:#fefefe;
  margin: 20rpx;
  border-radius: 6rpx;
}
.firstChatItem{
  margin-top:0rpx; 
}
.chatItemText{
  text-align: center;
  font-size: smaller;
  display: flex;
  padding:15rpx;
  flex:1;
}
.chatItemTitle{
  font-size: larger;
  padding:30rpx;
}

.imageIcon{
  height:30rpx;
  width:30rpx;
}

.search{
  height: 32px;
  display: flex;
}

.qAndSBtn{
  width: 100%;
  height: 32px;
  background-color: transparent;
  -webkit-text-fill-color: skyblue;
  font-size: 13px;
  display: inline-block;
}

.questionInput{
  height: 32px;
  margin-left: 10px;
}

.inputQView{
  width: 70%;
  border:  2px solid rgba(128, 128, 128, 0.5);
  border-radius: 20px;
  margin-left: 10px;
  margin-top: 5px;
}

.btnView{
  width: 110px;
  display: flex;
}