/**index.wxss**/
@import '../common/weui.wxss';

.chatList{
  background-color: gainsboro;
  min-height: 1400rpx;
}

.item{
  background-color: white;
  box-shadow: 1px 5px 3px 2px darkgray;
  margin: 40rpx 10rpx;
  height:auto;
  font-family:Courier New, Courier, monospace;
}
.item_first {
  margin-top: 10rpx;
}
.chatItemText{
  text-align: center;
  font-size: smaller;
  display: flex;
  padding:15rpx;
  flex:1;
}
.chatItemTitle{
  font-size: larger;
  padding:30rpx;
}

.imageIcon{
  margin-top: 40rpx;
  margin-left: 5rpx;
  height:100rpx;
  width:100rpx;
}

.search{
  border-radius: 15rpx;
  height: auto;
  display: flex;
}

.writeBtn{
  position: fixed;
  width: 165rpx;
  height: 165rpx;
  top: 875rpx;
  right: 20rpx;
  background-color: rgb(59, 133, 135);
  border-radius: 5em;
}

.searchBtn {
  position: fixed;
  width: 165rpx;
  height: 165rpx;
  top: 700rpx;
  right: 20rpx;
  background-color: darkgray;
  border-radius: 5em;
}

.questionInput{
  height: auto;
  vertical-align: middle;
}

.inputQView{
  background-color: transparent;
  display: flex;
  width: 1000rpx;
  height: 65rpx;
  border:  2px solid rgb(59, 133, 135);
  border-top-style: none;
  border-left-style: none;
  border-right-style: none;
  border-radius: 10px;
  margin-left: 10%;
  font-size: 16px;
}

 .block{
  width:20rpx;
} 
.btnView{
  width: 110px;
  display: flex;
}
.image-top{
  width:100%;
}