<!--index.wxml-->
<view class = "chatList">
  <view class='search'>
    <view class='inputQView'>
      <view class = 'block'></view>
      <input id = "search" placeholder='输入话题' class='qustionInput'></input>
    </view>
    <view class='btnView'>
      <button class='qAndSBtn' bindtap='searchTap'>
        <image src="../../resource/images/search.png" class = "imageIcon"></image>
      </button>
      <button class='qAndSBtn' bindtap='addQTap'>
        <image src="../../resource/images/write.png" class = "imageIcon"></image></button>
    </view>    
  </view>
  <block wx:for="{{chatList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.ID}}">
    <navigator id = "{{item.ID}}" url = "../chat/chat" class = "item_blue {{index%2==0?'item_yellow':''}}" bindtap='itemTap'>
      <view class = "chatItemTitle">
        {{item.topic}}
      </view>
      <view class = "chatItemText">
        <view class = "chatItemText">
          回复量：{{item.respCount}}
        </view>
        <view class = "chatItemText">
          点赞量：{{item.clapCount}}
        </view>
      </view>
    </navigator>
  </block>
</view>
