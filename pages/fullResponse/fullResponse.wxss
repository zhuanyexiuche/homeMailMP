/* pages/fullResponse/fullResponse.wxss */
@import "../index/index.wxss";
@import "../common/weui.wxss";
@import "../chat/chat.wxss";
.fullresponseContent{
  padding:30rpx; 
}
.header{
  display: inline-flex;
  justify-content: space-between;
  height:auto;
}
.buttonView{
  display: inline-flex;
  width:max-content;
  height:auto;
}

.delete{
  display: none;
}

.deleted{
  width: 75px;
  height: 25px;
  font-size: 12px;
  -webkit-text-fill-color: grey;
  background-color: transparent;
  display:unset;
}

.support{
  width: 42px;
  height: 25px;
  -webkit-text-fill-color: grey;
  background-color: transparent;
  text-align: center;
  font-size: 12px;
}
.supported{
  -webkit-text-fill-color: white;
  background-color: rgba(128, 128, 128, 0.5);
}