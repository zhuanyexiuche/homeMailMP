/* pages/chat/chat.wxss */
@import "../index/index.wxss";
@import "../common/weui.wxss";
.chatList{
  margin: 0;
  width: 100%;
}
.line{
  height: 3rpx;
  background: gainsboro;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 0;
}
.chatTopic{
  /* background-color: rgba(245,245,245,0.5); */
  background-color: transparent;
  padding: 30rpx;
  font-size:17px;
  font-family:Courier New, Courier, monospace;
}
.chatTopicContext{
  font-size:14px;
  white-space: pre-wrap;
  font-family:Courier New, Courier, monospace;
  padding-top:10rpx;
  padding-bottom: 10rpx;
  color: gray;
}
.responseItem{
  padding:20rpx;
  margin: 30rpx;
  border-radius: 20rpx;
  box-shadow: 1px 1px 1px 1px gainsboro;
  border-color: gainsboro;
  background-color: white;
}
.questionArea{
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 0 gainsboro;
  border: solid 1px gainsboro;
  margin: 30rpx 20rpx;
  height:auto;
}
.responseHead{
  font-size: small;
  display: inline-flex;
  width: 545rpx;
  background-color:transparent;
  font-family:Courier New, Courier, monospace;
}
.responseContent{
  font-size: 13px;
  color: gray;
  margin-left: 16%;
}
.responseBottom{
  font-size:xx-small;
  font-family:Courier New, Courier, monospace;
  margin-left: 75%
}
.buttonView{
  /* background-color: #fdfdfd; */
  display: flex;
  align-items: center;
  /* padding-bottom: 10px; */
}
.image{
  height:85rpx;
  width:85rpx;
  border-radius: 5em;
}

.imageIcon{
  height:40rpx;
  width:40rpx;
}

.btn{
   /* flex:1;  */
   padding-left:80rpx;
   padding-right:80rpx;
  display:flex;
   background-color: white; 
  -webkit-text-fill-color: skyblue;
    /* text-align: center;  */
  align-items: center; 
  height: 70rpx;
  width:fit-content;
  font-size: 35rpx;
  /* background-color: red; */
}
.folder{
  margin: 0rpx;
  padding:0rpx;
  font-size:10px;
  text-align: center;
}
.hide{
  display: none;
}
.content_blue{
  padding: 10px;
  background: rgba(135, 206, 235, 0.1);
  box-shadow: 1px 1px 1px 1px rgb(135, 206, 235);
  margin: 10px;
  border-radius: 6px;
  height: auto;
}

.content_yellow{
  background: rgba(255, 234, 214, 0.2);
  box-shadow: 1px 1px 1px 1px rgb(255, 234, 214);
}
.content{
  margin:5px;
  padding:5px;
  border-radius:30px;

}
.underline{
  background-color:rgba(128,128,128,0.5);
  height:3rpx;
  margin: 15rpx;
}
.answer{
  margin-top:15%;
  margin-left: 13%;
}
.count{
  position:absolute; 
  top:17%;
  color:grey;
}