/* pages/treeHole/treeHole.wxss */
.title{
  width: 100%;
  height: 100%;
  margin-top: 1%;
  display: flex;
  justify-content: center;
}

.treeHoleList{
  background-color: white;
  height:auto;
}

.content_blue{
  padding: 10px;
  background: rgba(135, 206, 235, 0.1);
  box-shadow: 1px 1px 1px 1px rgb(135, 206, 235);
  margin: 10px;
  border-radius: 6px;
  height: auto;
}

.content_yellow{
  background: rgba(255, 234, 214, 0.2);
  box-shadow: 1px 1px 1px 1px rgb(255, 234, 214);
}

.imageIcon{
  height:25px;
  width:25px;
  margin:10px;
  margin-right:6px;
  margin-left:10px;
}

.change{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  height:60rpx;
  width:fit-content;
  font-size: 14px;
  background-color: transparent;
  border-radius: 2em;
  box-shadow: 3rpx 2rpx 1rpx 1rpx darkgray;
  color: gray;
}